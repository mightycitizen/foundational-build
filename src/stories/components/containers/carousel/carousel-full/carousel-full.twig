{% set slider_id = 'slider-full' %}
{% embed '@components/sections/section.twig' with {
  section_background_splide: slider_id
} %}
  {% block section_content %}

    {% set slides = [
      {
        title: 'Slide 1',
        background_image: {
          src: 'https://placehold.co/1920x1080/ff0000',
          alt: ''
        },
        tab: 'Tab 1',
        background_image: {
          src: 'https://placehold.co/1920x1080/0000ff',
          alt: ''
        },
        description: 'test'
      },
      {
        title: 'Slide 1',
        background_image: {
          src: 'https://placehold.co/1920x1080/00ff00',
          alt: ''
        },
        tab: 'Tab 1',
        description: 'test'
      },
      {
        title: 'Slide 1',
        background_image: {
          src: 'https://placehold.co/1920x1080/33ff00',
          alt: ''
        },
        tab: 'Tab 1',
        description: 'test'
      }
    ] %}
    {% embed '@components/containers/splide/splide.twig' with {
      modifier: 'full',
      id: slider_id,
      grid: true,
      pause: true,
      equalize: true,
      splide_tabs: true
    }%}
      {% block slide_content %}
        {% for slide in slides %}
          <div data-splide-background="{{ slide.background_image.src | default }}">
            <h2>{{ slide.title }}</h2>
            <p>{{ slide.description }}</p>
          </div>
        {% endfor %}
      {% endblock %}
    {% endembed %}

  <div class="splide_progress" data-splide="{{ slider_id | default }}">
    <div class="splide_progress_line"></div>
  </div>
  {% endblock %}
{% endembed %}
